<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="220dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_bg"
                 >

    <TextView
        android:textColor="@android:color/background_dark"
        android:textSize="17sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_dialog_offline_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="信息已失效,请重新登录."/>

    <TextView
        android:background="@drawable/offline_dialog_confirm_bg"
        android:gravity="center"
        android:id="@+id/tv_dialog_offline_confirm_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:padding="11dp"
        android:textColor="@android:color/black"
        android:text="确定"
        android:textSize="14sp"/>
<View
    android:visibility="gone"
    android:layout_above="@id/tv_dialog_offline_confirm_tip"
    android:background="@color/main_house_color"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"/>
</RelativeLayout>