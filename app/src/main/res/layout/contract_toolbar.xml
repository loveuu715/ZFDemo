<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/contract_toolBar_my_customer"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="-1dp"
            android:layout_weight="1"
            android:background="@drawable/home_title_text_left_selector"
            android:enabled="false"
            android:gravity="center"
            android:padding="2dp"
            android:text="我的客户"
            android:textColor="@drawable/house_title_left_text_color_selector"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/contract_toolBar_my_agent"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-1dp"
            android:layout_weight="1"
            android:background="@drawable/home_title_text_right_selector"
            android:enabled="true"
            android:gravity="center"
            android:padding="2dp"
            android:text="经纪人"
            android:textColor="@drawable/house_title_right_text_color_selector"
            android:textSize="14sp"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/contract_toolBar_right_search"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="13dp"
        android:src="@mipmap/icon_housesource_search"/>

    <ImageView
        android:id="@+id/contract_toolBar_right_add_contract"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/iv_house_toolbar_right_search"
        android:layout_toStartOf="@+id/iv_house_toolbar_right_search"
        android:padding="13dp"
        android:src="@mipmap/icon_house_source_add"
        android:visibility="gone"/>

</RelativeLayout>