<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="200dp">

    <com.loveuu.vv.widget.viewpager.InterceptScrollViewPager
        android:id="@+id/vp_home_carousel_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#77000000">

        <TextView
            android:id="@+id/tv_home_carousel_pic_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textColor="@color/color_dark_white"
            android:textSize="16sp"
            />

        <LinearLayout
            android:id="@+id/ll_home_carousel_pic_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingRight="18dip">
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>